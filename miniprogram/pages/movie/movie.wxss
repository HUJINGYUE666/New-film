.movie{
  height: 300rpx;
  padding: 10px;
  display: flex;
  border-bottom: 1px solid #ccc; 
}

.movie-image{
  width: 200rpx;
  height: 100%;
  margin-right: 20px;
}

.movie-info{
  flex: 1;
}

.movie-title{
  color: #666;
  font-size: 40rpx;
  font-weight: bolder;
}

.movie-score{
  color: #faaf00;
}

