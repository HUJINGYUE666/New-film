.detail-container{
  height: 400rpx;
  filter: blur(40rpx);
  opacity: .5;
}

.detail-mask{
  width: 100%;
  height: 400rpx;
  background-color: #333;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.detail-info{
  width: 100%;
  height: 400rpx;
  position: absolute;
  top: 0;
  padding: 10px;
  display: flex;
}

.detail-image{
  width: 280rpx;
  height: 90%;
  margin-right: 20rpx;
}

.detail{
  flex: 1;
}

.detail-title{
  color: #fff;
  font-size: 40rpx;
  font-weight: bolder;
}

.detail-score{
  color: #faaf00;
}

.detail-title2,.detail-countries,.detail-directors{
  font-size: 25rpx;
  color: #fff;
  padding: 10rpx 0 10rpx 0;
}

.detail-summary{
  font-size: 25rpx;
  padding: 10px;
}

.comment-image{
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx 0 20rpx 0;
}