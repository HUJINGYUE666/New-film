 .profile{
   height: 400rpx;
   width: 100%;
   background: #E54847;
   position: relative;
 }

 .profile-image{
   width: 200rpx;
   height: 200rpx;
   border-radius: 50%;
   position: absolute;
   top: 50%;
   left: 50%;
   transform:translate(-50%,-50%);
 }

 .profile-name{
   position: absolute;
   left: 50%;
   transform:translateX(-50%);
   top:80%;
   color: #fff; 
 }